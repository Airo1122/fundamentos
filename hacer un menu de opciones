#include <iostream>
#include <math.h>
using namespace std;

int main()
{
    int numero,opc,cubo;
    
    cout<<"1.Cubo de un numero"<<endl;
    cout<<"2.Numero par o impar"<<endl;
    cout<<"3.Salir"<<endl;
    cout<<"Opcion"<<endl;
    cin>>opc;
    
    
    switch(opc)
    {
        case 1: 
            cout<<" Ingresar un numero: ";cin>>numero;
           cubo=pow(numero,3);
           cout<<"El numero al cubo es: "<<cubo;break;

        case 2:
            cout<<"Ingresar un numero";cin>>numero;
            if(numero&2==0){
                cout<<"El numero es par";
                }
                else{
                    cout<<"El numero es impar";
                }
        case 3: break;
    }




    return 0;
}
