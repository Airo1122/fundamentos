#include <iostream>

using namespace std;

int main()
{
    
    float parcial1,parcial2,parcial3,proyectofinal,examenfinal,notafinal;
    cout<<"Ingresar la nota del parcial 1: ";
    cin>>parcial1;
    cout<<"Ingresar la nota del parcial 2: ";
    cin>>parcial2;
    cout<<"Ingresar la nota del parcial 3: ";
    cin>>parcial3;
    cout<<"Ingresar la nota del proyecto final: ";
    cin>>proyectofinal;
    cout<<"Ingresar la nota del examen final: ";
    cin>>notafinal;
    notafinal=((parcial1+parcial2+parcial3)/3)*0.4+proyectofinal*0.4+examenfinal*0.2;
    cout<<"La nota final es: "<<notafinal;
    if (notafinal>=51)
        cout<< "Esta aprobado ";
    else
        cout<< "Reprobo la materia ";
        return 0;
}
