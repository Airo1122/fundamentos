#include <iostream>

using namespace std;

int main()
{
    int a,b,opcion;
    float r;
    cout<<"Ingresar a"<<endl;
    cin>>a;
    cout<<"Ingresar b"<<endl;
    cin>>b;
    cout<<"Menu"<<endl;
    cout<<"1.suma"<<endl;
    cout<<"2.resta"<<endl;
    cout<<"3.multiplicacion"<<endl;
    cout<<"4.division"<<endl;
    cout<<"elige una opcion: "<<endl;
    cin>>opcion;
    switch(opcion){
        case 1:r=a+b;
        case 2:r=a-b;
        case 3:r=a*b;
        case 4: r=a/b;
        default: cout<<"opcion invalida";
    }
    cout<<"El resultado es: "<<r<<endl;
    
    

    return 0;
}
