#include <iostream>

using namespace std;

int main()
{
    float n,m,suma,promedio,contador,c;

    cout<<"Digite el valor de N: ";cin>>n;
    cout<<"Digite el valor de M: ";cin>>m;
    c = n;
    suma=0;
    while (c<=m)
    {
        suma= suma + c;
        c++;
        
    }
    
    cout<<"La suma es: "<<suma<<endl;
    cout<<"El promedio es: "<<suma/(m-n+1);


    return 0;
}
