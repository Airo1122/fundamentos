/*Realice un programa que lea un valor entro y determine
si se trata de un numero par o impar*/


#include <iostream>

using namespace std;

int main()
{
    int numero;
    
    cout<<"Ingrese el numero: "; cin>>numero;
    
    if (numero%2==0) 
    {
        cout<<"El numero es par";
    }
    else {
        cout<<"El numero es impar";
         }
         
    return 0;
}
